{
	"manifest_version": 3,
	"name": "Readersourcing 2.0: RS_Rate",
	"short_name": "RS_Rate",
	"version": "1.0.15",
	"version_name": "1.0.15",
	"description": "Allows to rate scientific publications within the Readersourcing 2.0 ecosystem.",
	"permissions": [
		"storage",
		"tabs"
	],
	"background": {
		"service_worker": "src/js/service_worker.js",
		"type": "module"
	},
	"default_locale": "en",
	"action": {
		"browser_style": true,
		"default_popup": "src/views/home.html",
		"default_icon": {
			"16": "src/img/icon16.png",
			"32": "src/img/icon32.png",
			"48": "src/img/icon48.png",
			"128": "src/img/icon128.png"
		}
	},
	"icons": {
		"16": "src/img/icon16.png",
		"32": "src/img/icon32.png",
		"48": "src/img/icon48.png",
		"128": "src/img/icon128.png"
	},
	"options_ui": {
		"page": "src/views/options.html",
		"open_in_tab": false
	}
}